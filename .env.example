CC_SERVER_URL=https://your-command-center-server-url.com
MCP_TRANSPORT_MODE=stdio/streamable-http/sse

# Required if MCP_TRANSPORT_MODE is set to sse / streamable-http
MCP_HOST=127.0.0.1
MCP_PORT=8000
MCP_PATH=/mcp

# Required if OAUTH is used for authentication
USE_OAUTH=true
OAUTH_AUTHORIZATION_ENDPOINT=https://your-oauth-endpoint.com/auth
OAUTH_TOKEN_ENDPOINT=https://your-oauth-endpoint.com/token
OAUTH_CLIENT_ID=your-oauth-client-id
OAUTH_CLIENT_SECRET=your-oauth-client-secret
OAUTH_JWKS_URI=https://your-oauth-endpoint.com/.well-known/jwks.json
OAUTH_REQUIRED_SCOPES=read,write
OAUTH_BASE_URL=https://your-mcp-server.com
